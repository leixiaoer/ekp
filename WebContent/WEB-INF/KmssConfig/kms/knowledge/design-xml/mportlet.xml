		<m:vars>
			<var name="{portlet.rowsize}" key="rowsize" kind="rowsize" default="6"/>
			<var name="{kms-knowledge:kmsKnowledge.portlet.type}" key="type" kind="enumValue" default="0">
		    	{
		    		"values":[{"text":"{kms-knowledge:kms.knowledge.4m.all}", "value":"0"},
