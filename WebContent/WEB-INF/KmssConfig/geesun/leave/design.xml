<?xml version="1.0" encoding="UTF-8"?>
<configs 
    xsi:schemaLocation="http://www.example.org/design-config ../../design.xsd " 
    xmlns="http://www.example.org/design-config" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <module 
        urlPrefix="/geesun/leave/" 
        messageKey="geesun-leave:module.geesun.leave" 
        defaultValidator="roleValidator(role=ROLE_GEESUNLEAVE_DEFAULT)">
        <roles>ROLE_GEESUNLEAVE_DEFAULT;ROLE_GEESUNLEAVE_SETTING;ROLE_GEESUNLEAVE_ADMINISTRATOR</roles>
        <request 
            path="tree.jsp*" 
            defaultValidator="roleValidator(role=ROLE_GEESUNLEAVE_SETTING)"/>
        <request 
            path="geesun_leave_main/geesunLeaveMain.do*" 
            validatorParameter="recid=fdId,model=com.landray.kmss.geesun.leave.model.GeesunLeaveMain" 
            defaultValidator="roleValidator(role=ROLE_GEESUNLEAVE_DEFAULT;ROLE_GEESUNLEAVE_ADMINISTRATOR)">
            <query 
                queryString="method=add|save|saveadd" 
                validator="roleValidator(role=ROLE_GEESUNLEAVE_ADMINISTRATOR)"/>
            <query 
                queryString="method=view" 
                validator="authFieldValidator(type=SYS_READER)"/>
            <query 
                queryString="method=edit|update" 
                validator="authFieldValidator(type=SYS_EDITOR)"/>
            <query 
                queryString="method=delete|deleteall" 
                validator="roleValidator(role=ROLE_GEESUNLEAVE_ADMINISTRATOR)"/>
        </request>
        <request 
            path="geesun_leave_adjust/geesunLeaveAdjust.do*" 
            validatorParameter="recid=fdId,model=com.landray.kmss.geesun.leave.model.GeesunLeaveAdjust" 
            defaultValidator="roleValidator(role=ROLE_GEESUNLEAVE_DEFAULT)">
            <query 
                queryString="method=view" 
                validator="authFieldValidator(type=SYS_READER)"/>
            <query 
                queryString="method=edit|update" 
                validator="authFieldValidator(type=SYS_EDITOR)"/>
            <query 
                queryString="method=delete|deleteall" 
                validator="roleValidator(role=ROLE_GEESUNLEAVE_SETTING)"/>
        </request>
        <request 
            path="geesun_leave_barter/geesunLeaveBarter.do*" 
            validatorParameter="recid=fdId,model=com.landray.kmss.geesun.leave.model.GeesunLeaveBarter" 
            defaultValidator="roleValidator(role=ROLE_GEESUNLEAVE_DEFAULT)">
            <query 
                queryString="method=view" 
                validator="authFieldValidator(type=SYS_READER)"/>
            <query 
                queryString="method=edit|update" 
                validator="authFieldValidator(type=SYS_EDITOR)"/>
            <query 
                queryString="method=delete|deleteall" 
                validator="roleValidator(role=ROLE_GEESUNLEAVE_SETTING)"/>
        </request>
        <filters 
            modelName="com.landray.kmss.geesun.leave.model.GeesunLeaveMain">
            <filter 
                type="SYS_READER" 
                expression="roleFilter(role=ROLE_GEESUNLEAVE_ADMINISTRATOR)"/>
            <filter 
                type="SYS_READER" 
                expression="authFieldFilter(field=authAllReaders.fdId)"/>
            <filter 
                type="SYS_READER" 
                expression="flagFieldFilter(field=authReaderFlag,value=1)"/>
            <filter 
                type="SYS_EDITOR" 
                expression="authFieldFilter(field=authAllEditors.fdId)"/>
        </filters>
        <filters 
            modelName="com.landray.kmss.geesun.leave.model.GeesunLeaveAdjust">
            <filter 
                type="SYS_READER" 
                expression="roleFilter(role=ROLE_GEESUNLEAVE_ADMINISTRATOR)"/>
            <filter 
                type="SYS_READER" 
                expression="authFieldFilter(field=authAllReaders.fdId)"/>
            <filter 
                type="SYS_READER" 
                expression="flagFieldFilter(field=authReaderFlag,value=1)"/>
            <filter 
                type="SYS_EDITOR" 
                expression="authFieldFilter(field=authAllEditors.fdId)"/>
        </filters>
        <filters 
            modelName="com.landray.kmss.geesun.leave.model.GeesunLeaveBarter">
            <filter 
                type="SYS_READER" 
                expression="roleFilter(role=ROLE_GEESUNLEAVE_ADMINISTRATOR)"/>
            <filter 
                type="SYS_READER" 
                expression="authFieldFilter(field=authAllReaders.fdId)"/>
            <filter 
                type="SYS_READER" 
                expression="flagFieldFilter(field=authReaderFlag,value=1)"/>
            <filter 
                type="SYS_EDITOR" 
                expression="authFieldFilter(field=authAllEditors.fdId)"/>
        </filters>
    </module>
    <module 
        urlPrefix="/sys/transport/">
        <request 
            path="sys_transport_import/SysTransportImport*"/>
        <request 
            path="sys_transport_export/SysTransportExport*"/>
    </module>
    <module 
        urlPrefix="/sys/transport/">
        <request 
            path="sys_transport_import/SysTransportImport*">
            <query 
                queryString="fdModelName=com.landray.kmss.geesun.leave.model.GeesunLeaveMain" 
                validator="roleValidator(role=ROLE_GEESUNLEAVE_SETTING)"/>
        </request>
        <request 
            path="sys_transport_export/SysTransportExport*">
            <query 
                queryString="fdModelName=com.landray.kmss.geesun.leave.model.GeesunLeaveMain" 
                validator="roleValidator(role=ROLE_GEESUNLEAVE_SETTING)"/>
        </request>
    </module>
    <!-- 接口地址、模板及异常通知人设置 -->
	<module urlPrefix="/sys/appconfig/">
		<request 
			path="sys_appconfig/sysAppConfig*">
			<query
				queryString="modelName=com.landray.kmss.geesun.leave.model.GeesunLeaveConfig"
				validator="roleValidator(role=ROLE_GEESUNLEAVE_SETTING)" />
		</request>
	</module>
    <homePage 
        messageKey="geesun-leave:module.geesun.leave" 
        urlPrefix="geesun/leave" 
        url="/geesun/leave/index.jsp" 
        config="/moduleindex_notopic.jsp?nav=/geesun/leave/tree.jsp"/>
    <profileConfig 
        key="geesun/leave" 
        messageKey="{geesun-leave:module.geesun.leave}" 
        url="/sys/profile/moduleindex.jsp?nav=/geesun/leave/tree.jsp" 
        icon="km_resource" 
        type="ekp" 
        description="{geesun-leave:module.geesun.leave.description}"/>
</configs>
